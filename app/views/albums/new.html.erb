<div class="container">
  <div class="card p-3 mt-5">
    <h1>New Album</h1>
    <%= simple_form_for(@album, data: { turbo: :false }) do |f| %>
      <%= f.input :album_name %>
      <%= f.input :artist, collection: @artists %>
      <%= f.input :year %>
      <%= f.input :photo, as: :file %>
      <%= f.button :submit, class:'btn btn-outline-dark border-pattern' %>
      <%= link_to 'Back', albums_path, class:'btn btn-outline-dark border-pattern' %>
    <% end %>
  </div>
</div>
